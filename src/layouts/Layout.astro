---
import "../styles/global.css";
import { Toaster } from "../components/ui/sonner";
import { HeaderAuthControls } from "../components/layout/HeaderAuthControls";

interface Props {
  title?: string;
}

const { title = "Flashcards AI" } = Astro.props;
const session = Astro.locals.session;
const user = Astro.locals.user;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="sticky top-0 z-50 w-full border-b border-border/40 bg-[#000000]/95 backdrop-blur supports-[backdrop-filter]:bg-[#000000]/80">
      <div class="container flex h-14 items-center max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center gap-4">
          <a href="/" class="flex items-center">
            <span class="font-regular text-white">Flashcards AI</span>
          </a>
        </div>
        <nav class="flex flex-1 justify-end">
          {session && (
            <div class="flex gap-6 mr-6">
              <a href="/" class="text-sm font-medium text-slate-200 hover:text-white transition-colors">
                Dashboard
              </a>
              <a href="/flashcards" class="text-sm font-medium text-slate-200 hover:text-white transition-colors">
                My Flashcards
              </a>
            </div>
          )}
          <HeaderAuthControls client:idle isAuthenticated={!!session} userEmail={user?.email ?? null} />
        </nav>
      </div>
    </header>
    <main class="min-h-screen">
      <slot />
    </main>
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
