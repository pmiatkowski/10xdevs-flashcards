---
import Layout from "../layouts/Layout.astro";
import { ForgotPasswordForm } from "../components/auth/ForgotPasswordForm";
export const prerender = false;

// If user is already logged in, redirect to home
if (Astro.locals.session) {
  return Astro.redirect("/", 307);
}
---

<Layout title="Forgot Password - AI Flashcards">
  <main class="container max-w-lg mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-center">Reset Password</h1>
    <div class="card border rounded-lg p-6 bg-card">
      <ForgotPasswordForm client:load />
    </div>
  </main>
</Layout>
